@model VSoftware.IO.ViewModels.PessoaViewModel

@{
    ViewData["Title"] = "Editar " + Model.Nome;
}

<h4 style="padding-top: 30px">@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">

            <vc:summary></vc:summary>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Documento" class="control-label"></label>
                <input asp-for="Documento" class="form-control" placeholder="Informe somente números" />
                <span asp-validation-for="Documento" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="OpcaoSexual"></label><br />
                <input type="radio" value="1" asp-for="OpcaoSexual" checked="@(Model.OpcaoSexual == 1)" />  Masculino<br />
                <input type="radio" value="2" asp-for="OpcaoSexual" checked="@(Model.OpcaoSexual == 2)" />  Feminino <br />
                <input type="radio" value="3" asp-for="OpcaoSexual" checked="@(Model.OpcaoSexual == 3)" />  Outros
            </div>

            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profissao" class="control-label"></label>
                <input asp-for="Profissao" class="form-control" />
                <span asp-validation-for="Profissao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </div>
        </form>
    </div>
</div>

